<!doctype html>
<html>
<head>
    <title>JP Restaurant Review</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1></span> Jamaica Plain Restaurant Review</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <div class="reviewSites"><img src="img/restaurant1.jpg" alt=""><span>El Oriental De Cuba</span></div>
      <div class="reviewSites"><img src="img/restaurant2.jpg" alt=""><span>Soup Shack</span></div>
      <div class="reviewSites"><img src="img/restaurant3.jpg" alt=""><span>The Little Dipper</span></div>
      <div class="reviewSites"><img src="img/restaurant4.jpg" alt=""><span>Ten Tables</span></div>
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">

              <div class="complete">
                <h3></span> Approved Reviews</h3>

                <ul class="messages">
                <% for(var i=0; i<messages.length; i++) {%>
                <% if(messages[i].complete == false) {%>
                  <li class="message">
                    <span><%= messages[i].name %></span>
                    <span><%= messages[i].restaurant %></span>
                    <span><%= messages[i].msg %></span>
                    <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                  </li>
                <% } %>
                <% } %>
                </ul>
              </div>
                <button type="button" name="button" class="remove">Remove</button>
            </div>
        </div>

        <div class="col-sm-6">
          <h3>Unmoderated Reviews</h3>
        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].complete == true) {%>
          <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].restaurant %></span>
              <span><%= messages[i].msg %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>

          <h2>Add a review</h2>
          <form action="/messages" method="POST">
            <input type="text" name="name" value="" placeholder="Name">
            <input type="text" value="" name="restaurant" placeholder="Resturant Name">
            <input type="text" placeholder="Review" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>

</div>

  <script src="main.js"></script>

</body>
</html>
